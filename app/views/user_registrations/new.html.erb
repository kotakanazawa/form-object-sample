<%= form_with(model: @user, url: user_registrations_path, local: true) do |form| %>
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>
  <p>
    <%= form.label :password %><br>
    <%= form.text_field :password %>
  </p>
  <p>
    <%= form.label :password_confirmation %><br>
    <%= form.text_field :password_confirmation %>
  </p>
  <p>
    <%= form.label "Terms of Service" %>
    <%= form.check_box :terms_of_service %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<%end %>
